<% content_for(:title, "#{@lesson.name} | Learn How to Race Bikes") %>

<% if @lesson.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @lesson.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/admin/lessons/<%= @lesson.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="lesson_name">Name</label>
  <input id="lesson_name" name="lesson[name]" type="text" value="<%= @lesson.name %>">
  <label for="lesson_text">Text</label>
  <textarea rows="10" cols="50" id="lesson_text" name="lesson[lesson]" type="text"><%= @lesson.lesson %></textarea>
  <label for="lesson_number">Number</label>
  <input id="lesson_number" name="lesson[number]" type="number" value="<%= @lesson.number %>">
  <button>Update Lesson</button>
</form>

<a href="/admin/lessons/<%= @lesson.id %>"
   data-confirm="You sure?"
   data-method="delete"
   rel="nofollow">Delete</a>
<a href="/admin">Return to Lessons</a>
