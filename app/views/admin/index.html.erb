<% content_for(:title, "Learn How to Race Bikes") %>

<h1>Lessons</h1>

<ul>
  <% @lessons.each do |lesson| %>
    <a href="admin/lessons/<%= lesson.number%>"><li><%= lesson.name %></li></a>
  <% end %>
</ul>

<h2>Create New Lesson</h2>

<% if @lesson.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @lesson.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/admin" method="post">
  <label for="lesson_name">Name</label>
  <input id="lesson_name" name="lesson[name]" type="text" value="<%= @lesson.name %>">
  <label for="lesson_text">Text</label>
  <textarea rows="10" cols="50" id="lesson_text" name="lesson[lesson]" type="text" value="<%= @lesson.lesson %>"></textarea>
  <label for="lesson_number">Number</label>
  <input id="lesson_number" name="lesson[number]" type="number" value="<%= @lesson.number %>">
  <button>Create Lesson</button>
</form>
